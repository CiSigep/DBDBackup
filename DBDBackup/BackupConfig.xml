<config>

  <destination>%USERPROFILE%\Documents\DBDBackups\</destination>
  <!-- Where you want your backups saved to, Default is %USERPROFILE%\Documents\DBDBackups\ -->

  <exeLoc>C:\Program Files (x86)\Steam\steamapps\common\Dead by Daylight\</exeLoc>
  <!-- Location of Dead By Daylight Executable   -->

  <maxBackups>5</maxBackups>
  <!-- Maximum number of backups you want to keep, Default is 5 -->
  

  <backupMode>0</backupMode>
  <!-- Backup mode, 0 = On Exit, 1 = Interval, 2 = On File Change, Default is 0 -->

  <interval>10</interval>
  <!-- Interval in minutes, Default is 10 -->

</config>